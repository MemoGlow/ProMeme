<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.stage.Stage?>

<Stage fx:id="mainStage" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.test.controller.MainWindowController">
    <scene>
        <Scene>
            <AnchorPane prefHeight="200" prefWidth="200">
            <children>
               <BorderPane prefHeight="322.0" prefWidth="496.0">
                  <top>
                     <ButtonBar prefHeight="6.0" prefWidth="496.0" BorderPane.alignment="CENTER">
                       <buttons>
                           <SplitMenuButton contentDisplay="RIGHT" mnemonicParsing="false" text="File">
                             <items>
                               <MenuItem mnemonicParsing="false" onAction="#setOnChoosingOpen" text="Open" />
                               <MenuItem mnemonicParsing="false" onAction="#setOnChoosingSave" text="Save" />
                             </items>
                           </SplitMenuButton>
                       </buttons>
                     </ButtonBar>
                  </top>
                  <center>
                     <Label fx:id="centerImage" BorderPane.alignment="CENTER" />
                  </center>
               </BorderPane>
            </children></AnchorPane>
        </Scene>
    </scene>
</Stage>
